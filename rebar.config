%-*-Erlang-*-
{deps, [{cpflib, {git, "git://github.com/aialferov/cpflib", {tag, "master"}}},
	{ewsc, {git, "git://github.com/aialferov/ewsc", {tag, "0.2.0"}}},
	{hackney, "1.16.0"},
	{jsx, "3.0.0"}
       ]}.

{plugins, [
    {r3erlang,
     {git, "https://github.com/aialferov/r3erlang", {branch, "master"}}}
]}.

{relx, [{release, { 'kube-vxlan-controller' , "0.1.0"},
	 [inets, cpflib, hackney, ewsc, jsx, sasl]},

	{dev_mode, true},
	{include_erts, false},

	{overlay, [
	    {mkdir, "bin"},
	    {template, "./priv/admin_bin", "bin/vxlan-admin"}
	]}
]}.

{shell, [{apps, ['kube-vxlan-controller']},
	 {config, "priv/kube-vxlan-controller.config"}]}.

{provider_hooks, [{post, [{compile, escriptize}]}]}.
{escript_emu_args, "%%! -start_epmd false"}.
